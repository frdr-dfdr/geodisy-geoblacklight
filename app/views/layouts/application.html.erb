<!DOCTYPE html>
<html>
  <head>
    <title>Geodisy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_tag '$.fx.off = true;' if Rails.env.test? %>
    <script type="text/javascript">
        I18n.defaultLocale = "<%= I18n.default_locale %>";
        I18n.locale = "<%= I18n.locale %>";
    </script>
</head>

  <body data-locale="<%= I18n.locale %>" class="<%= render_body_class %>">
  <%= render :partial => 'shared/header_navbar' %>


  <%= render partial: 'shared/ajax_modal' %>

  <div id="main-container" class="<%= container_classes %>">

    <%= content_tag :h1, application_name, class: 'sr-only application-heading' %>

    <div class="row">
      <%= yield %>
    </div>
  </div>

  <%= render :partial => 'shared/geo_footer' %>

  <script>
      var p_script = document.createElement("script");
      p_script.src = "/stats/js/script.js";
      p_script.setAttribute("data-api", "/stats/api/event");
      p_script.setAttribute("data-domain", "<%= ENV.fetch("STATS_DOMAIN") %>");
      p_script.setAttribute("defer", "");
      document.write(p_script.outerHTML);
  </script>

  </body>
</html>
